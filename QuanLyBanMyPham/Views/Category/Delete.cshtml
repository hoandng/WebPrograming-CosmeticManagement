@model QuanLyBanMyPham.Models.Category

@{
    ViewBag.Title = "Xóa Loại Sản Phẩm";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 style="color: #FF1493">Xóa Loại Sản Phẩm</h1>
<div class="alert alert-warning">
    <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa loại sản phẩm này?
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Loại Sản Phẩm
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryName
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoryId" />
    <button type="submit" class="btn btn-danger">Xác Nhận Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Trở Về</a>
</form>
