@model QuanLyBanMyPham.Models.Category

@{
    ViewBag.Title = "Chỉnh Sửa Loại Sản Phẩm";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}

<h1 style="color: #FF1493">Chỉnh Sửa Loại Sản Phẩm</h1>
<form asp-action="EditEmployee" method="post">
    <input type="hidden" asp-for="CategoryId" />
    <div class="form-group row" style="margin-top: 7px;">
        <label asp-for="CategoryName" class="col-sm-2 col-form-label">Loại Sản Phẩm</label>
        <div class="col-sm-10">
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="margin-top: 7px;">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-secondary">Thay Đổi</button>
        </div>
    </div>
</form>
