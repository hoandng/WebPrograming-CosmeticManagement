@model Category
@{
    ViewBag.Title = "Thêm Loại Sản Phẩm";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1 style="color: #FF1493">Thêm Loại Sản Phẩm</h1>
<div class="ms-2 mx-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Category" asp-action="Create" method="post" class="mt-3">
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="CategoryName" class="col-sm-2 col-form-label">Loại Sản Phẩm</label>
            <div class="col-sm-10">
                <input asp-for="CategoryName" class="form-control" placeholder="Loại sản phẩm" />
            </div>
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
      


        <div class="form-group row" style="margin-top: 15px;">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-create">Thêm Loại Sản Phẩm Mới</button>
            </div>
        </div>
    </form>
</div>
