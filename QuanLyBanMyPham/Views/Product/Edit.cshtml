@model QuanLyBanMyPham.Models.Product

@{
    ViewBag.Title = "Chỉnh Sửa Sản Phẩm";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1 style="color: #FF1493">Chỉnh Sửa Sản Phẩm</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group row" style="margin-top: 7px;">
        <label asp-for="ProductName" class="col-sm-2 col-form-label">Tên Sản Phẩm</label>
        <div class="col-sm-10">
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="margin-top: 7px;">
        <label asp-for="Price" class="col-sm-2 col-form-label">Giá</label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="margin-top: 7px;">
        <label asp-for="Quantity" class="col-sm-2 col-form-label">Số Lượng</label>
        <div class="col-sm-10">
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="margin-top: 7px;">
        <label for="CategoryId" class="col-sm-2 col-form-label">Danh Mục</label>
        <div class="col-sm-10">
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="margin-top: 7px;">
        <label for="SupplierId" class="col-sm-2 col-form-label">Nhà Cung Cấp</label>
        <div class="col-sm-10">
            <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="margin-top: 7px;">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-secondary">Thay Đổi</button>
        </div>
    </div>
</form>
