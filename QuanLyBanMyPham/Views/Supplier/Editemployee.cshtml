@model QuanLyBanMyPham.Models.Supplier

@{
    ViewBag.Title = "Chỉnh Sửa Nhà Cung Cấp";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}
<h1 style="color: #FF1493">Chỉnh Sửa Nhà Cung Cấp</h1>
<form asp-action="EditEmployee" method="post">
    <input type="hidden" asp-for="SupplierId" />

    <div class="form-group row" style="margin-top: 7px;">
        <label asp-for="SupplierName" class="col-sm-2 col-form-label">Tên Nhà Cung Cấp</label>
        <div class="col-sm-10">
            <input asp-for="SupplierName" class="form-control" />
            <span asp-validation-for="SupplierName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="margin-top: 7px;">
        <label asp-for="ContactName" class="col-sm-2 col-form-label">Tên Liên Lạc</label>
        <div class="col-sm-10">
            <input asp-for="ContactName" class="form-control" />
            <span asp-validation-for="ContactName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="margin-top: 7px;">
        <label asp-for="Phone" class="col-sm-2 col-form-label">Số Điện Thoại</label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="margin-top: 7px;">
        <label asp-for="Address" class="col-sm-2 col-form-label">Địa Chỉ</label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="margin-top: 7px;">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="margin-top: 7px;">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-secondary">Thay đổi</button>
        </div>
    </div>
</form>
