@model Supplier
@{
    ViewBag.Title = "Xóa Nhà Cung Cấp";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}
<h1 style="color: #FF1493">Xóa Nhà Cung Cấp</h1>
<div class="ms-2 mx-2">
    <div class="alert alert-warning">
        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa nhà cung cấp này?
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Nhà Cung Cấp
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplierName)
        </dd>

        <dt class="col-sm-2">
            Tên Liên Lạc
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactName)
        </dd>

        <dt class="col-sm-2">
            Số Điện Thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt class="col-sm-2">
            Địa Chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="DeleteEmployee" method="post">
        <input type="hidden" asp-for="SupplierId" />
        <input type="submit" value="Xác Nhận Xóa" class="btn btn-danger" />
        <a asp-action="IndexEmployee" class="btn btn-secondary">Trở Về</a>
    </form>
</div>
