@model User
@{
    ViewBag.Title = "Xóa Nhân Viên";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1 style="color: #FF1493">Xóa Nhân Viên</h1>
<div class="ms-2 mx-2">
    <div class="alert alert-warning">
        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa nhân viên này?
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Họ Và Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
         Emai
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
          Số Điện Thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="@Model.UserId" />
        <input type="submit" value="Xác Nhận Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Trở về</a>
    </form>
</div>