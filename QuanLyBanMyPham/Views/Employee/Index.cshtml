@model IEnumerable<QuanLyBanMyPham.Models.User> 

@{
    ViewBag.Title = "Danh Sách Nhân Viên";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 style="color: #FF1493">Danh Sách Nhân Viên</h1>

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
    Thêm Nhân Viên
</a>
<div class="table-responsive">

    <table class="table table-bordered">
<table class="table">
    <thead>
        <tr>
            <th>Tên Người Dùng</th>
            <th>Mật Khẩu</th>
            <th>Họ Và Tên</th>
            <th>Email</th>
            <th>Số Điện Thoại</th>
            <th>Chức Năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Password</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-success">
                        <i class="fas fa-edit"></i> Chỉnh sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</table>
</div>